{% extends "AcardFrontendBundle::page_layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% if page.urlTitle != 'kontakt' %}
        <script src="{{ asset('bundles/acardfrontend/js/box_scroll.js') }}"></script>
    {% endif %}
{% endblock %}

{% block body %}
    {{ include('AcardFrontendBundle:_Partials:stats_small.html.twig', {}) }}
    <section class="page-content">
        <div class="wrapper">
            <div class="col-sm-8 page-content-article">
                {% block content %}
                    <div class="col-sm-8 page-content-article {{ page.wrapperCssClass }}">
                        {{ page.text|raw }}
                        <article>
                            <h2><strong>Miasto</strong></h2>
                            {{ include('AcardFrontendBundle:_Partials:form_surgeries.html.twig', {}) }}
                            <table class="surgeries">
                                <thead>
                                    <tr>
                                        <th>Nazwa Poradni</th>
                                        <th>Imię i nazwisko lekarza</th>
                                        <th>Adres</th>
                                        <th>Kod pocztowy</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for surgery in surgeries %}
                                        <tr>
                                            <td>{{ surgery.name }}</td>
                                            <td>{{ surgery.drName }}</td>
                                            <td>{{ surgery.address }}</td>
                                            <td>{{ surgery.postcode }}</td>
                                        </tr>
                                    {% endfor%}
                                </tbody>
                            </table>
                            <a class="btn read-more" href="{{ path('acard_frontend_page_view', {'pageUrl':'konkurs'})}}" style="margin: 20px 0;"><span>Wróć &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></a>
                        </article>
                    </div>
                {% endblock %}
            </div>
            {{ include('AcardFrontendBundle:_Partials:calendarium.html.twig', {}) }}
        </div>
    </section>
    {{ include('AcardFrontendBundle:_Partials:modal_video.html.twig', {}) }}
    {{ include('AcardFrontendBundle:_Partials:teasers.html.twig', {}) }}
{% endblock %}